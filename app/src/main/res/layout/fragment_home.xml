<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sos_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="SOS"
        android:textSize="34sp"
        android:textColor="@color/white" 
        app:backgroundTint="?attr/colorError" 
        app:cornerRadius="100dp" 
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/map_button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.4"
        android:contentDescription="SOS Alert Button" />

    <LinearLayout
        android:id="@+id/map_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:padding="8dp" 
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" 
        app:layout_constraintTop_toBottomOf="@+id/sos_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/map_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_map" 
            android:contentDescription="Map Icon"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/map_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Map"
            android:textColor="?attr/colorPrimary" 
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>